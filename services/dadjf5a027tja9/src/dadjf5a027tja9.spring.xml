                      p:privilegeSpawnedThreads="true"
                      />
    
    <bean id="dadjf5a027tja9SessionFactory" class="com.wavemaker.runtime.data.factory.TypeResolverSessionFactoryBean">
        <property name="dataSource" ref="dadjf5a027tja9DataSource"/>
        <property name="packagesToScan" value="com.presense.dadjf5a027tja9"/>
        <property name="mappingResources">
            <list>
                <value>
                    dadjf5a027tja9-queries.hbm.xml
                </value>
            </list>
        </property>
        <property name="customTypes">
            <array value-type="com.wavemaker.runtime.data.CustomType">
                <ref bean="dateTimeCustomType"/>
            </array>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">
                    ${dadjf5a027tja9.dialect}
                </prop>
                <prop key="hibernate.show_sql">
                    false
                </prop>
                <prop key="hibernate.globally_quoted_identifiers">
                    false
                </prop>
                <prop key="hibernate.hbm2ddl.auto">
                    ${dadjf5a027tja9.hbm2ddl}
                </prop>
            </props>
        </property>
    </bean>
    <bean id="dadjf5a027tja9TransactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
        <property name="sessionFactory" ref="dadjf5a027tja9SessionFactory"/>
    </bean>
    <bean id="dadjf5a027tja9Template" class="org.springframework.orm.hibernate4.HibernateTemplate">
        <property name="sessionFactory" ref="dadjf5a027tja9SessionFactory"/>
    </bean>
    <bean id="dadjf5a027tja9WMQueryExecutor" class="com.wavemaker.runtime.data.dao.query.WMQueryExecutorImpl">
        <property name="template" ref="dadjf5a027tja9Template"/>
    </bean>
    <bean id="dadjf5a027tja9WMProcedureExecutor" class="com.wavemaker.runtime.data.dao.procedure.WMProcedureExecutorImpl">
        <property name="template" ref="dadjf5a027tja9Template"/>
        <property name="serviceId" value="dadjf5a027tja9" />
    </bean>

    <bean id="persistentLocalDateTimeType" class="com.wavemaker.studio.common.data.type.WMPersistentLocalDateTime"/>
    <bean id="dateTimeCustomType" class="com.wavemaker.runtime.data.CustomType">
        <property name="type" ref="persistentLocalDateTimeType"/>
        <property name="keys">
            <list>
                <value>DateTime</value>
                <value>org.joda.time.LocalDateTime</value>
            </list>
        </property>
    </bean>

    <tx:annotation-driven/>

</beans>

